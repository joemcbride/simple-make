{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "plugins": [
    "babel"
  ],
  "extends": ["eslint:recommended"],
  "rules": {
    "constructor-super": 2,
    "comma-spacing": 2,
    "comma-style": [2, "last"],
    "object-shorthand": 2,
    "one-var": [2, { "initialized": "never" }],
    "key-spacing": ["error", { "beforeColon": false }],
    "no-this-before-super": 2,
    "no-underscore-dangle": 0,
    "no-unused-vars": [2, { "vars": "all", "args": "none" }],
    "no-var": 2,
    "quotes": [2, "single", "avoid-escape"],
    "strict": 0
  }
}
